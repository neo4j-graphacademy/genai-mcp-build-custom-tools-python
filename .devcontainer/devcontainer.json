{
  "name": "Building GraphRAG Python MCP tools",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  "postCreateCommand": "bash .devcontainer/post_create.sh",
  "forwardPorts": [
		  8000,
      6277,
      6274
		],
  "portsAttributes": {
		"8000": {
      "label": "mcp server"
		},
    "6277": {
      "label": "MCP Inspector - proxy server"
		},
    "6274": {
      "label": "MCP Inspector - UI",
      "onAutoForward": "openPreview"
		}
	},
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.adoc",
        ".env",
        ".vscode/mcp.json"
      ]
    },
    "vscode": {
      "settings": {
        "python.createEnvironment.trigger": "off",
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "neo4j-extensions.neo4j-for-vscode",
        "github.copilot"
      ]
    }
  }
}